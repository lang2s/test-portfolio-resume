

<!-- Login  Modal -->
<div class="modal fade" id="myModal_login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-login" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">로그 인</h4>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="email">메일주소</label>
                        <input type="text" class="form-control" id="e-mail" placeholder="e-mail">
                    </div>
                    <div class="form-group">
                        <label for="password"> 이름 </label>
                        <input type="password" class="form-control" id="name" placeholder="이름">
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <div class="row">
                    <div>
                        <div class="col-md-8">
                            <a href="/oauth2/authorization/google" class="btn btn-secondary" role="button" style="padding: 0;">
                                <img src="/img/login/google.png" style="width: 170px; height: 40px; margin-right: 15px;"/>
                            </a><!-- 로그아웃과 만찬가지로 기본적으로 제공하는 url -->
                            <a href="/oauth2/authorization/naver" class="btn btn-secondary" role="button" style="padding: 0;">
                               <img src="/img/login/naver.PNG" style="width: 170px; height: 36px;">
                            </a>
                        </div>
                        <div style="float: right" class="col-md-4">
                            <button type="button" class="btn btn-warning active" id="btn-login active" style="position: relative; top: 3px; height: 36px;width: 100px;">
                                로그인
                            </button>
                            <a href="#" role="button" class="btn btn-light" id="btn-loginCancel" style="position: relative; top: 3px;">
                                취소
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.modal -->